.index-swipe
  width 100%
  img
    width 100%
    height 100%
// 轮播图
.van-grid
  background-color #fbf7f8
  padding 5px 0 20px 0
  margin-top -8px
  font-size 12px
  .van-grid-item
    margin-top 10px
    .van-grid-item__content
      background-color #fbf7f8
  img
    width 95%
  p
    margin-top 5px
// grid宫格
.van-tabs
  div
    .van-sticky
      border-bottom 1px solid #f4f4f4
      .van-tabs__wrap
        .van-tabs__nav
          .van-tab
            font-size 20px
            font-weight 700
          .van-tabs__line
            width 120px
            height 6px
            background-color #ff6ea5
            border-radius 3px
  .van-tabs__content
    .van-tab__pane
      background-color #fbf7f8
      .love
        width 100%
        background-color #ffffff
        display flex
        flex-direction column
        align-items flex-start